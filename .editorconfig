# EditorConfig is awesome: https://EditorConfig.org

# Default:
# https://github.com/editorconfig/editorconfig-defaults/blob/master/editorconfig-defaults.json

root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
# indent_size = 4

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

# 4 space indentation
[*.{py,java,r,R,ipynb}]
indent_style = space
indent_size = 4
profile = black

# 2 space indentation
[*.{js,json,y{a,}ml,html,cwl}]
indent_style = space
indent_size = 2

[*.{md,Rmd,rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[tsconfig.json]
indent_size = 2
[*]

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false
eclint_indent_style = unset

[Dockerfile]
indent_size = 4
